import ContentLayout from "../layouts/ContentLayout.astro";
import Layout from "../layouts/Layout.astro";

const desc = "All the content on EliteAnswers.in is either submitted to EliteAnswers.in by email or is readily available in various places on the Internet and believed to be in the public domain."
---

<Layout title={"Contact us - "+title} desc={desc} index={true}>
