---
const { title, desc, index } = Astro.props;
const canonical = Astro.request.url;

// Astro.response.headers.set('Cache-Control', 'public, maxage=3600, stale-while-revalidate=30');
---

<!doctype html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>{title}</title>
        <meta name='description' content={desc || " "} />
        <link rel='canonical' href={canonical} />
        <meta name='robots' content={index ? "index,follow" : "noindex"} />
        <link rel='stylesheet' href='/style.css' />
        <link rel='stylesheet' href='/style2.css' />
        <script async src='https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2508592928833513' crossorigin='anonymous'></script>
    </head>
    <body class='bg-dark-subtle col-md-10 m-auto'>
        <slot>
            <p>Not Found</p>
        </slot>
        <!-- Google tag (gtag.js) -->
        <script async src='https://www.googletagmanager.com/gtag/js?id=G-JWMJX3XWT0'></script>
        <script type='text/javascript'>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());

            gtag("config", "G-JWMJX3XWT0");
        </script>
    </body>
</html>
